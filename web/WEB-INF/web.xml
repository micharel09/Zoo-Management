<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>sample.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FoodController</servlet-name>
        <servlet-class>sample.food.FoodController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FoodControllers</servlet-name>
        <servlet-class>sample.food.FoodController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FoodScheduleController</servlet-name>
        <servlet-class>sample.foodschedule.FoodScheduleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewsController</servlet-name>
        <servlet-class>sample.news.NewsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FeedbackController</servlet-name>
        <servlet-class>sample.feedback.FeedbackController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AnimalReportController</servlet-name>
        <servlet-class>sample.animalreport.AnimalReportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AnimalCageController</servlet-name>
        <servlet-class>sample.animacage.AnimalCageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AnimalCageDelete</servlet-name>
        <servlet-class>sample.animacage.AnimalCageDelete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>
    <servlet-mapping>
        <servlet-name>FoodController</servlet-name>
        <url-pattern>/FoodController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FoodControllers</servlet-name>
        <url-pattern>/FoodControllers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FoodScheduleController</servlet-name>
        <url-pattern>/FoodScheduleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewsController</servlet-name>
        <url-pattern>/NewsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FeedbackController</servlet-name>
        <url-pattern>/FeedbackController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnimalReportController</servlet-name>
        <url-pattern>/AnimalReportController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnimalCageController</servlet-name>
        <url-pattern>/AnimalCageController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnimalCageDelete</servlet-name>
        <url-pattern>/AnimalCageDelete</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>MainController</welcome-file>
    </welcome-file-list>
</web-app>
